---
layout: base
---

{# Content of the post #}
<article>
    {# Only display a description if the article has one #}
    {% if description %}
        <h4>
            <i>{{ description }}</i>
        </h4>
    {% endif %}

    {# Post date #}
    <em>{{ date | normalDate }}</em>
    <br>
    <br>
    {{ content | safe }}
</article>